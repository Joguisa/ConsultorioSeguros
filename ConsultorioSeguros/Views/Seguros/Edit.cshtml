@model ConsultorioSeguros.Models.Seguro

@{
    ViewData["Title"] = "Edit";
}

<h1 class="d-flex justify-content-center align-items-center">Editar Seguro</h1>

<hr />
<div class="d-flex justify-content-center align-items-center">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="NombreSeguro" class="control-label"></label>
            <input asp-for="NombreSeguro" class="form-control" />
            <span asp-validation-for="NombreSeguro" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CodigoSeguro" class="control-label"></label>
            <input asp-for="CodigoSeguro" class="form-control" />
            <span asp-validation-for="CodigoSeguro" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SumaAsegurada" class="control-label"></label>
            <input asp-for="SumaAsegurada" class="form-control" />
            <span asp-validation-for="SumaAsegurada" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Prima" class="control-label"></label>
            <input asp-for="Prima" class="form-control" />
            <span asp-validation-for="Prima" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary"> Actualizar</button>
            <a class="btn btn-info" asp-action="Index"> Regresar</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
